<div id="ticket">
	<h2><%= @ticket.title %></h2>
	<span id="author">Created by <%= @ticket.user.email %></span>
	<%= link_to "Edit ticket", [:edit, @project, @ticket] %> | <%= link_to "Delete ticket", [@project, @ticket], method: :delete, data: { confirm: "Are you sure you want to delete this ticket?" } %>
	<%= simple_format @ticket.description %>
</div>
